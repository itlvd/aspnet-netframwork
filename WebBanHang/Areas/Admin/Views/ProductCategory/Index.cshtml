@using PagedList.Mvc
@model PagedList.IPagedList<WebBanHang.Models.EF.ProductCategory>
@{
    ViewBag.Title = "Danh mục sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@section naviheader{

    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>

}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý tin tức</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/productcategory/add" class="btn btn-primary">Thêm mới</a>
                <a href="#" class="btn btn-danger" id="btnDeleteAll">Xoá</a>
            </div>
        </div>
        <div class="card-body">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="selectAll" /></th>
                        <th>STT</th>
                        <th>Tên mục</th>
                        <th>Ngày tạo</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ViewBag.PageSize * (ViewBag.PageIndex - 1) + 1;
                        foreach (var item in Model)
                        {
                            
                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td>@item.Title</td>
                                <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                
                                <td>
                                    <a href="/admin/productcategory/edit/@item.Id" class="btn btn-sm btn-warning">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xoá</a>
                                </td>
                            </tr>
                            i++;
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào!</td>
                        </tr>
                    }

                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->

@section scripts{

    <script>
        $(document).ready(function () {
            $('body').on('click', '#btnDeleteAll', function (e) {
                var ids = [];
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');

                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                        ids.push($(this).val());
                    }
                });
                if (ids.length > 0) {
                    var conf = confirm("Bạn có muốn xoá tất cả tin tức này không?");
                    if (conf == true) {
                        $.ajax({
                            url: '/productcategory/deleteAll',
                            type: 'POST',
                            data: { ids: ids },
                            success: function (res) {
                                if (res.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });

            $('body').on('change', '#selectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');

                checkbox.each(function () {
                    this.checked = checkStatus;
                });

            });



            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm("Bạn có muốn xoá dữ liệu này không?");
                if (conf === true) {
                    $.ajax({
                        url: '/admin/productcategory/delete/',
                        type: "POST",
                        data: { id: id },
                        success: function (res) {
                            if (res.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });



            $('body').on('click', '.btnActive', function () {

                var btn = $(this);
                var id = $(this).data("id");
                $.ajax({
                    url: '/admin/productcategory/IsActive/',
                    type: "POST",
                    data: { id: id },
                    success: function (res) {
                        debugger;
                        if (res.success) {
                            if (res.IsActive) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            }
                            else {
                                btn.html("<i class='fa fa-times text-danger'></i>");
                            }
                        }
                    }
                });
            });
        });
    </script>

}